<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Total</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Order Summary</h1>

        <!-- Order Summary -->
        <ul>
            <% for (let item in selectedItems) { %>
                <li>
                    <strong><%= item %></strong> - 
                    <%= selectedItems[item].quantity %> x $<%= selectedItems[item].price.toFixed(2) %> 
                    = $<%= (selectedItems[item].quantity * selectedItems[item].price).toFixed(2) %>
                </li>
            <% } %>
        </ul>

        <!-- Total -->
        <h2>Total: $<%= total.toFixed(2) %></h2>

        <!-- Clear Order Button -->
        <form action="/clear-cart" method="POST">
            <button type="submit">Clear Order</button>
        </form>

        <!-- Back to Menu Link -->
        <a href="/">Back to Menu</a>
    </div>
</body>
</html>